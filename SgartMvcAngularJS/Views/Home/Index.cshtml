<!DOCTYPE html>
<html data-ng-app="app" data-ng-cloak>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>
    @ViewBag.Title
  </title>
  <!-- base: necessario ad angular per gestire i path senza hash # -->
  <base href="/">
  <link rel="stylesheet" href="/content/css/bootstrap.min.css" media="screen">
  <link rel="stylesheet" href="/content/css/bootswatch.1.min.css">
  <link rel="stylesheet" href="/content/css/style.css?@ViewBag.VERSION">
</head>

<body>
  <div class="box-wait" data-ng-show="isWaiting()" data-ng-animate=" 'animate' ">
    <div class="container"></div>
  </div>
  <div class="box-messages" data-ng-show="showMessage()" data-ng-animate=" 'animate' ">
    <ul class="list-group">
      <li data-ng-repeat="item in messages" class="list-group-item {{getMessageClass(item)}}"><span data-ng-click="removeMessageById(item.id)" class="badge" data-ng-click="removeMessageById(item.id,item.autoclose)">X</span> <span data-ng-bind="item.m"></span></li>
    </ul>
  </div>
  <div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <a href="javascript:void(0)" data-ng-click="gotoHome()" class="navbar-brand"><img class="img-responsive" src="/content/images/sgart32.png"></a>
        <button class="navbar-toggle btn navbar-btn" type="button" ng-init="navCollapsed = true" ng-click="navCollapsed = !navCollapsed">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="navbar-collapse navbar-responsive-collapse" ng-class="{collapse: navCollapsed}">
        <ul class="nav navbar-nav navbar-right">
          <li>
            <a href="javascript:void(0)" data-ng-click="gotoHome()"><i class="glyphicon glyphicon-home"></i></a>
          </li>
          <li class="dropdown" ng-class="{ open : ddStyle }" ng-init="ddStyle = false" ng-click="ddStyle = !ddStyle">
            <a href="javascript:void(0)" class="dropdown-toggle">Theme <span class="caret"></span></a>
            <ul class="dropdown-menu collapse">
              <li data-ng-repeat="css in cssTable">
                <a href="javascript:void(0)" data-ng-click="setCss(css)">{{css.title}}</a>
              </li>
            </ul>
          </li>
          <li>
            <a href="javascript:void(0)" data-ng-click="openStatistics()"><i class="glyphicon glyphicon-stats"></i> Statistics</a>
          </li>
          <li>
            <a href="javascript:void(0)" data-ng-click="goto('/new')"><i class="glyphicon glyphicon-plus"></i> New</a>
          </li>
          <li>
            <a href="javascript:void(0)"><i class="glyphicon glyphicon-time"></i> <span data-sgart-clock=""></span></a>
          </li>
          <li>
            <a href="http://www.sgart.it" target="_blank">Sgart.it</a>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="page-header" id="banner">
      <div class="row">
        <div class="col-sm-6">
          <h1>{{title}}</h1>
        </div>
        <div class="col-sm-6">
          <h3 class="text-right">{{subTitle}}</h3>
        </div>
      </div>
    </div>
    <div data-ng-view=""></div>
  </div>
  <script src="/content/js/angular.min.js"></script>
  <script src="/content/js/angular-resource.min.js"></script>
  <script src="/content/js/angular-route.min.js"></script>
  <script src="/content/js/angular-animate.min.js"></script>
  <script src="/content/js/angular-cookies.min.js"></script>
  <script src="/content/js/ui-bootstrap-tpls-0.13.0.min.js"></script>

  <script src="/app/app.js?@ViewBag.VERSION"></script>
  <script src="/app/others/app-route.js?@ViewBag.VERSION"></script>
  <script src="/app/others/app-run.js?@ViewBag.VERSION"></script>
  <script src="/app/services/todoFactory.js?@ViewBag.VERSION"></script>
  <script src="/app/controllers/deleteConfirmController.js?@ViewBag.VERSION"></script>
  <script src="/app/controllers/todoController.js?@ViewBag.VERSION"></script>
  <script src="/app/controllers/todoNewController.js?@ViewBag.VERSION"></script>
  <script src="/app/controllers/todoEditController.js?@ViewBag.VERSION"></script>
  <script src="/app/controllers/todoStatisticsController.js?@ViewBag.VERSION"></script>
  <script src="/app/directives/sgartClockDirective.js?@ViewBag.VERSION"></script>
</body>
</html>